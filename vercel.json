{
  "$schema": "https://openapi.vercel.sh/vercel.json",

  "framework": null,

  "buildCommand": "npm install && cd backend && npm install && npm run build",

  "functions": {
    "api/*.ts": {
      "maxDuration": 30
    }
  },

  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.ts"
    },
    {
      "src": "/api/chat",
      "dest": "/api/chat.ts"
    },
    {
      "src": "/api/ingest",
      "dest": "/api/ingest.ts"
    }
  ]
}
