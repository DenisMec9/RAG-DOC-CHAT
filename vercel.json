{
  "$schema": "https://openapi.vercel.sh/vercel.json",
  "framework": null,
  "functions": {
    "api/*.ts": {
      "runtime": "nodejs22.x"
    }
  },
  "buildCommand": "npm install && cd backend && npm install && npm run build",
  "outputDirectory": "public",
  "routes": [
    {
      "src": "/api/health",
      "dest": "/api/health.ts"
    },
    {
      "src": "/api/chat",
      "dest": "/api/chat.ts"
    },
    {
      "src": "/api/ingest",
      "dest": "/api/ingest.ts"
    }
  ]
}

